<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:StudyTracker.ViewModels"
             x:Class="StudyTracker.EditGradePage"
             x:DataType="viewmodels:EditGradeViewModel"
             Title="Add New Grade">

    <VerticalStackLayout Spacing="10" Padding="20" VerticalOptions="Center">

        <Label Text="Érdemjegy (1-5)" FontAttributes="Bold"/>
        <Entry Text="{Binding GradeToEdit.Value}"
               Placeholder="5"
               Keyboard="Numeric"/>

        <Label Text="Dátum" FontAttributes="Bold"/>
        <DatePicker Date="{Binding GradeToEdit.Date}" />

        <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
            <Button Text="Save" Command="{Binding SaveGradeCommand}"/>
            <Button Text="Cancel" Command="{Binding CancelCommand}"/>
        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>