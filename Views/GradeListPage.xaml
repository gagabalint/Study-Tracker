<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:StudyTracker.Models"
             xmlns:viewmodels="clr-namespace:StudyTracker.ViewModels"
             x:Class="StudyTracker.GradeListPage"
             x:DataType="viewmodels:GradeListViewModel"
             Title="{Binding SubjectName, StringFormat='Grades for {0}'}"
             Loaded="OnLoaded">

    <Grid RowDefinitions="Auto, *">

        <Grid Grid.Row="0" ColumnDefinitions="Auto, *, Auto, Auto, Auto" Padding="10">

            <Button Grid.Column="0"
                Text="Vissza"
                Command="{Binding CancelCommand}"
                HorizontalOptions="Start"/>

            

            <Button Grid.Column="2"
                Text="Új jegy"
                Command="{Binding AddNewGradeCommand}"
                HorizontalOptions="End"/>

            <Button Grid.Column="3"
                Text="Szerkeszt"
                Command="{Binding EditGradeCommand}"
                HorizontalOptions="End"/>

            <Button Grid.Column="4"
                Text="Töröl"
                Command="{Binding DeleteGradeCommand}"
                HorizontalOptions="End"/>

        </Grid>

        <CollectionView Grid.Row="1" ItemsSource="{Binding Grades}"
                            SelectionMode="Single"
                             SelectedItem="{Binding SelectedGrade}">

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Grade">
                    <Frame Padding="10" Margin="5" CornerRadius="8">

                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer 
                                Command="{Binding BindingContext.SelectSubjectCommand, Source={RelativeSource AncestorType={x:Type CollectionView}}}"
                                CommandParameter="{Binding .}"/>
                        </Frame.GestureRecognizers>

                        <HorizontalStackLayout Spacing="20">
                            <Label Text="{Binding Value, StringFormat='Jegy: {0}'}" 
                           FontSize="Medium" 
                           FontAttributes="Bold"/>

                            <Label Text="{Binding Date, StringFormat='{0:yyyy-MM-dd}'}" 
                           FontSize="Medium" 
                           VerticalOptions="Center"/>
                        </HorizontalStackLayout>

                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>

    </Grid>
</ContentPage>